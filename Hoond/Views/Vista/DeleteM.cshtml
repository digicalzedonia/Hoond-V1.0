@model IEnumerable<Hoond.Models.Vista>
@using Hoond.app_GlobalResources;
@using CaptchaMvc.HtmlHelpers;
@{
    ViewBag.Title = "DeleteM";
}
<div class="icon-delete"><h2>@Content.titulo_DelmVista</h2></div>
<h3>@Content.msg_EliminarMasivo</h3>
@using (Html.BeginForm("DeleteConfirmedM", "Vista", FormMethod.Post))
{
    @Html.Captcha(Content.msg_CapRefresh, Content.msg_CapMsg, 4)
    @ViewBag.Error
    <p>
        <input type="submit" value="@Content.submit_EliminarC" />
        <span class="link-txt back">@Html.ActionLink(Content.link_Regresar, "Index")</span>
    </p>	
	<table>
		<thead>
		<tr>
			<th>
                <input type="checkbox" id="idH" checked="checked" />
            </th>
            <th data-toggle="true">
                <div>
                    @Html.DisplayNameFor(model => model.descVista)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.controller)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.action)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.parametro)
                </div>
            </th>
	    </tr>
		</thead>
		<tbody>
	
	@foreach (var item in Model) {
		<tr>
			<td>
                <input type="checkbox" name="ids" value="@item.idVista" checked="checked" />
            </td>
	        <td>
                @Html.DisplayFor(modelItem => item.descVista)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.controller)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.action)
            </td> 
	        <td>
                @Html.DisplayFor(modelItem => item.parametro)
            </td>  
	    </tr>
	}
		</tbody>
	</table>
}

