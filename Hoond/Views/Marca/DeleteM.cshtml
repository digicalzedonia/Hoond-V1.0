@model IEnumerable<Hoond.Models.Marca>
@using Hoond.app_GlobalResources;
@using CaptchaMvc.HtmlHelpers;
@{
    ViewBag.Title = "DeleteM";
}
<div class="icon-delete"><h2>@Content.titulo_DelmMarca</h2></div>
<h3>@Content.msg_EliminarMasivo</h3>
@using (Html.BeginForm("DeleteConfirmedM", "Marca", FormMethod.Post))
{
    @Html.Captcha(Content.msg_CapRefresh, Content.msg_CapMsg, 4)
    @ViewBag.Error
    <p>
        <input type="submit" value="@Content.submit_EliminarC" />
        <span class="link-txt back">@Html.ActionLink(Content.link_Regresar, "Index")</span>
    </p>	
	<table>
		<thead>
		<tr>
			<th>
                <input type="checkbox" id="idH" checked="checked" />
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.Proveedor.nombreProveedor)
                </div>
            </th>
            <th data-toggle="true">
                <div>
                    @Html.DisplayNameFor(model => model.nombreMarca)
                </div>
            </th>
	    </tr>
		</thead>
		<tbody>
	
	@foreach (var item in Model) {
		<tr>
			<td>
                <input type="checkbox" name="ids" value="@item.idMarca" checked="checked" />
            </td>
	        <td>
                @Html.DisplayFor(modelItem => item.Proveedor.nombreProveedor)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.nombreMarca)
            </td>  
	    </tr>
	}
		</tbody>
	</table>
}

