    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="grid">
        <div class="grid_row">
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.descIcono)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.descIcono)
                @Html.ValidationMessageFor(model => model.descIcono)
            </div>
        </div>
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.claseIcono)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.claseIcono)
                @Html.ValidationMessageFor(model => model.claseIcono)
            </div>
        </div>
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.rutaIcono)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.rutaIcono)
                @Html.ValidationMessageFor(model => model.rutaIcono)
            </div>
        </div>
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.x)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.x)
                @Html.ValidationMessageFor(model => model.x)
            </div>
        </div>
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.y)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.y)
                @Html.ValidationMessageFor(model => model.y)
            </div>
        </div>
        </div>
        <div class="grid_row">
            <div class="grid_item center">
                <input type="submit" value="@Content.submit_Crear" />
            </div>
            <div class="grid_item center">
                <span class="link-txt back">@Html.ActionLink(Content.link_Regresar, "Index")</span>
            </div>
        </div>
    </diV>
}


