@model PagedList.IPagedList<Hoond.Models.Menu>
@using Hoond.app_GlobalResources;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}
<h2>@Content.titulo_ListMenu</h2>
@if (!String.IsNullOrEmpty(ViewBag.msgError))
{
    @Html.Action("Mensaje", "Comun", new { msgError = ViewBag.msgError })
}
<p class="link-txt create">
    @Html.ActionLink(Content.link_Crear, "Create")
</p>
@using (Html.BeginForm("Index", "Menu", FormMethod.Get))
{
    @Html.Action("Buscar", "Comun", new { Campos = "Menu2.descMenu,Vista.descVista,descMenu,etiqueta", Descripcion = "Menu Padre,Vista,Menu,Etiqueta" })
}
@using (Html.BeginForm("DeleteM", "Menu", FormMethod.Post))
{
    <input type="submit" value="@Content.submit_EliminarM" id="cmdEliminar" class="delete-table" />	
	<table>
		<thead>
		<tr>
			<th>
                <input type="checkbox" id="idH"  />
            </th>
	        @if(ViewBag.isAdmin)
            {
            <th data-hide="phone">
                <div id="@if(ViewBag.sortField == "idMenu") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().idMenu).ToString(), "Index", new { sortField = "idMenu", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>
            }
            <th data-toggle="true">
                <div id="@if(ViewBag.sortField == "Menu2.descMenu") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().Menu2.descMenu).ToString(), "Index", new { sortField = "Menu2.descMenu", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>		
	        <th data-hide="phone">
                <div id="@if(ViewBag.sortField == "Vista.descVista") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().Vista.descVista).ToString(), "Index", new { sortField = "Vista.descVista", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>		
	        <th data-hide="phone">
                <div id="@if(ViewBag.sortField == "descMenu") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().descMenu).ToString(), "Index", new { sortField = "descMenu", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>		
	        <th data-hide="phone">
                <div id="@if(ViewBag.sortField == "etiqueta") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().etiqueta).ToString(), "Index", new { sortField = "etiqueta", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>		
	        <th data-hide="phone">
                <div id="@if(ViewBag.sortField == "orden") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().orden).ToString(), "Index", new { sortField = "orden", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>		
	        <th data-hide="phone">
                <div id="@if(ViewBag.sortField == "Icono.descIcono") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().Icono.descIcono).ToString(), "Index", new { sortField = "Icono.descIcono", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>		
	        @if(ViewBag.isAdmin)
            {
            <th data-hide="phone">
                <div id="@if(ViewBag.sortField == "Usuario.nombreUsuario") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().Usuario.nombreUsuario).ToString(), "Index", new { sortField = "Usuario.nombreUsuario", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>
            }
            @if(ViewBag.isAdmin)
            {
            <th data-hide="phone">
                <div id="@if(ViewBag.sortField == "fecha_alta") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().fecha_alta).ToString(), "Index", new { sortField = "fecha_alta", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>
            }
            @if(ViewBag.isAdmin)
            {
            <th data-hide="phone">
                <div id="@if(ViewBag.sortField == "activo") { @ViewBag.Id }">
                    @Html.ActionLink(@Html.DisplayNameFor(model => model.First().activo).ToString(), "Index", new { sortField = "activo", txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField })
                </div>
            </th>
            }
    		<th data-hide="phone"></th>
		</tr>
		</thead>
		<tbody>
	
	@foreach (var item in Model) {
		<tr>
			<td>
                <input type="checkbox" name="ids" value="@item.idMenu" />
            </td>
	        @if(ViewBag.isAdmin)
            {
		    <td>
				@Html.DisplayFor(modelItem => item.idMenu)
			</td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Menu2.descMenu)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.Vista.descVista)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.descMenu)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.etiqueta)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.orden)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.Icono.descIcono)
            </td>  
	        @if(ViewBag.isAdmin)
            {
		    <td>
				@Html.DisplayFor(modelItem => item.Usuario.nombreUsuario)
			</td>
            }
            @if(ViewBag.isAdmin)
            {
		    <td>
				@Html.DisplayFor(modelItem => item.fecha_alta)
			</td>
            }
            @if(ViewBag.isAdmin)
            {
		    <td>
				@Html.DisplayFor(modelItem => item.activo)
			</td>
            }
    		<td>
				<div class="buttons">
					<a href="@Url.Action("Edit", new { id=item.idMenu })"><div class="edit"></div></a>
					<a href="@Url.Action("Details", new { id=item.idMenu })"><div class="details"></div></a>
					<a href="@Url.Action("Delete", new { id=item.idMenu })"><div class="delete"></div></a>
				</div>
			</td>
		</tr>
	}
		</tbody>
	</table>
}
<div class="paging">
    <span>@Content.msg_Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) @Content.msg_Pageof @Model.PageCount</span>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, txtBusqueda = ViewBag.CurrentFilter, cmbPaginado = ViewBag.CurrentPage, cmbCampo = ViewBag.CurrentField }))
</div>
