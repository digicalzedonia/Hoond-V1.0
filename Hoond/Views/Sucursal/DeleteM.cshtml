@model IEnumerable<Hoond.Models.Sucursal>
@using Hoond.app_GlobalResources;
@using CaptchaMvc.HtmlHelpers;
@{
    ViewBag.Title = "DeleteM";
}
<div class="icon-delete"><h2>@Content.titulo_DelmSucursal</h2></div>
<h3>@Content.msg_EliminarMasivo</h3>
@using (Html.BeginForm("DeleteConfirmedM", "Sucursal", FormMethod.Post))
{
    @Html.Captcha(Content.msg_CapRefresh, Content.msg_CapMsg, 4)
    @ViewBag.Error
    <p>
        <input type="submit" value="@Content.submit_EliminarC" />
        <span class="link-txt back">@Html.ActionLink(Content.link_Regresar, "Index")</span>
    </p>	
	<table>
		<thead>
		<tr>
			<th>
                <input type="checkbox" id="idH" checked="checked" />
            </th>
            <th data-toggle="true">
                <div>
                    @Html.DisplayNameFor(model => model.nombreSucursal)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.telefonoSucursal)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.dirSucursalPais)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.dirSucursalEstado)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.dirSucursalMunicipio)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.dirSucursalCP)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.dirSucursalColonia)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.dirSucursalCalle)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.dirSucursalNoExterior)
                </div>
            </th>
	        <th data-hide="phone">
                <div>
                    @Html.DisplayNameFor(model => model.dirSucursalNoInterior)
                </div>
            </th>
	    </tr>
		</thead>
		<tbody>
	
	@foreach (var item in Model) {
		<tr>
			<td>
                <input type="checkbox" name="ids" value="@item.idSucursal" checked="checked" />
            </td> 
	        <td>
                @Html.DisplayFor(modelItem => item.nombreSucursal)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.telefonoSucursal)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.dirSucursalPais)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.dirSucursalEstado)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.dirSucursalMunicipio)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.dirSucursalCP)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.dirSucursalColonia)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.dirSucursalCalle)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.dirSucursalNoExterior)
            </td>  
	        <td>
                @Html.DisplayFor(modelItem => item.dirSucursalNoInterior)
            </td>  
	    </tr>
	}
		</tbody>
	</table>
}

