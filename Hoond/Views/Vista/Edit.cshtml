@model Hoond.Models.Vista
@using Hoond.app_GlobalResources;
@{
    ViewBag.Title = "Edit";
}
<div class="icon-edit"><h2>@Content.titulo_EditVista</h2></div>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<div class="grid">
    <div class="grid_row">
        @if(!ViewBag.isAdmin)
        {
            @Html.HiddenFor(model => model.idVista)  
        }
        else
        {
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.idVista)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.idVista)
                @Html.ValidationMessageFor(model => model.idVista)
            </div>
        </div>
        }
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.descVista)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.descVista)
                @Html.ValidationMessageFor(model => model.descVista)
            </div>
        </div>
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.controller)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.controller)
                @Html.ValidationMessageFor(model => model.controller)
            </div>
        </div>
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.action)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.action)
                @Html.ValidationMessageFor(model => model.action)
            </div>
        </div>
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.idIcono, "Icono")
            </div>
            <div class="editor-field">
                @Html.DropDownList("idIcono", String.Empty)
                @Html.ValidationMessageFor(model => model.idIcono)
            </div>
        </div>
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.parametro)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.parametro)
                @Html.ValidationMessageFor(model => model.parametro)
            </div>
        </div>
        @Html.HiddenFor(model => model.idUsuario_alta)   
        @if(!ViewBag.isAdmin)
        {
            @Html.HiddenFor(model => model.fecha_alta)  
        }
        else
        {
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.fecha_alta)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.fecha_alta)
                @Html.ValidationMessageFor(model => model.fecha_alta)
            </div>
        </div>
        }
        @if(!ViewBag.isAdmin)
        {
            @Html.HiddenFor(model => model.activo)  
        }
        else
        {
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.activo)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.activo)
                @Html.ValidationMessageFor(model => model.activo)
            </div>
        </div>
        }
    </div>
    <div class="grid_row">
        <div class="grid_item center">
            <input type="submit" value="@Content.submit_Guardar" />
        </div>
        <div class="grid_item center">
            <p class="link-txt back">@Html.ActionLink(Content.link_Regresar, "Index")</p>
        </div>
    </div>
</div>
}



