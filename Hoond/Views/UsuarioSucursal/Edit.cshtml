@model Hoond.Models.UsuarioSucursal
@using Hoond.app_GlobalResources;
@{
    ViewBag.Title = "Edit";
}
<div class="icon-edit"><h2>@Content.titulo_Editar UsuarioSucursal</h2></div>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

     @Html.HiddenFor(model => model.idSucursal)  
      @Html.HiddenFor(model => model.idUsuario)  
    
<div class="grid">
    <div class="grid_row">
       
        @*@Html.Action("InsertTipoUsuarioSucursal","Comun")*@
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.idTipoUsuarioSucursal, "TipoUsuarioSucursal")
            </div>
            <div class="editor-field">
                @*En caso de desencadenamineto cabiar esta linea indicando las entidadea a desencadenar separadas por coma *@
                @*@Html.DropDownList("idTipoUsuarioSucursal", null, String.Empty, new { @onchange = "LlenaSC(this.value, 'Entidad1,Entidad2')" })*@
                @Html.DropDownList("idTipoUsuarioSucursal", String.Empty)
                @Html.ValidationMessageFor(model => model.idTipoUsuarioSucursal)
                @*Indicar el campo que va a retonar ala hacer la captura del formulario modal *@
                <a id='name' href="#" onclick="OpenDialog('TipoUsuarioSucursal', 'Campo(s) a retornar')" class="addnew">@Content.link_nuevo</a>
            </div>
        </div>
        @Html.HiddenFor(model => model.idUsuario_alta)   
        @if(!ViewBag.isAdmin)
        {
            @Html.HiddenFor(model => model.fecha_alta)  
        }
        else
        {
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.fecha_alta)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.fecha_alta)
                @Html.ValidationMessageFor(model => model.fecha_alta)
            </div>
        </div>
        }
        @if(!ViewBag.isAdmin)
        {
            @Html.HiddenFor(model => model.activo)  
        }
        else
        {
        <div class="grid_item">
            <div class="editor-label">
                @Html.LabelFor(model => model.activo)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.activo)
                @Html.ValidationMessageFor(model => model.activo)
            </div>
        </div>
        }
    </div>
    <div class="grid_row">
        <div class="grid_item center">
            <input type="submit" value="@Content.submit_Guardar" />
        </div>
        <div class="grid_item center">
            <p class="link-txt back">@Html.ActionLink(Content.linkRegresar, "Index")</p>
        </div>
    </div>
</div>
}



